$accentColor = #4FB9E6
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34

.page
  .content:not(.custom)
    max-width: 1000px;
  .content
    code
      color: #e96900;
    blockquote
      font-size 15px
      border-color: $accentColor;
      p
        font-weight bold;
        color: #34495e;
    .custom-block.tip
      border-color $accentColor
  .page-edit, .page-nav
    max-width: 1000px;